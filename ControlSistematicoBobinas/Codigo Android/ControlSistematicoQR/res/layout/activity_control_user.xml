<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_control_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlUser" >

    
     <EditText
        android:id="@+id/txtFormato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName" />
    
    <EditText
        android:id="@+id/txtNroBobina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFormato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnIngresarBobina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNroBobina"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="#00f"
        android:minHeight="50dip"
        android:onClick="clickIngresar"
        android:text="Ingresar"
        android:textColor="#fff"
        android:width="320dp"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spMaquinistas"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    
</RelativeLayout>